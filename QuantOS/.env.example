# ==========================================
#        QUANTOS CONFIGURATION
# ==========================================

# --- GENERAL SETTINGS ---
# active_broker options: alpaca, robinhood, ibkr, schwab, sofi, webull, router
ACTIVE_BROKER=ibkr
PAPER_MODE=True
LOG_LEVEL=INFO

# --- INTERACTIVE BROKERS (IBKR) ---
# Requires TWS or IB Gateway running
# TWS Paper: 7497 | TWS Live: 7496
# Gateway Paper: 4002 | Gateway Live: 4001
IBKR_HOST=127.0.0.1
IBKR_PORT=7497
IBKR_CLIENT_ID=1

# --- ALPACA (Paper & Live) ---
APCA_API_KEY_ID=
APCA_API_SECRET_KEY=
APCA_API_BASE_URL=https://paper-api.alpaca.markets

# --- ROBINHOOD ---
ROBINHOOD_USERNAME=
ROBINHOOD_PASSWORD=
ROBINHOOD_TOTP=

# --- SOFI ---
SOFI_USERNAME=your_email@example.com
SOFI_PASSWORD=your_password

# --- WEBULL ---
WEBULL_EMAIL=your_email
WEBULL_PASSWORD=your_password
WEBULL_PIN=your_6_digit_pin

# --- TRADINGVIEW WEBHOOK ---
TV_WEBHOOK_KEY=YOUR_SECRET_PHRASE

# --- EMAIL REPORTING ---
REPORT_EMAIL=your_report_sender@gmail.com
REPORT_PASSWORD=your_app_password
REPORT_RECIPIENTS=claudio.jr@email.com, claudio.sr@email.com

# --- CHARLES SCHWAB ---
# 1. Create an App at https://developer.schwab.com/
# 2. Set Callback URL in portal to: https://127.0.0.1
SCHWAB_APP_KEY=
SCHWAB_APP_SECRET=
SCHWAB_CALLBACK_URL=https://127.0.0.1
# Token file will be auto-generated in config/schwab_token.json

# --- TAX & ACCOUNTING ---
TAX_BRACKET_PERCENT=0.30
ENABLE_WASH_SALE_GUARD=True

# --- BIGQUERY CLOUD MIGRATION ---
GOOGLE_APPLICATION_CREDENTIALS=path/to/service_account.json
BQ_PROJECT_ID=your_project_id
BQ_DATASET_ID=your_dataset_id
BQ_TABLE_ID=market_data

# --- QUESTDB (Time-Series Database) ---
# Docker default credentials â€” change these in production!
QUESTDB_HOST=questdb
QUESTDB_USER=admin
QUESTDB_PASSWORD=quest

# --- INFRASTRUCTURE ---
DB_HOST=postgres
REDIS_HOST=redis
